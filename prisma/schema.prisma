generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model Guild {
  id        String   @id
  prefix    String   @default(",,")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("guilds")
}

model User {
  id           String   @id
  username     String
  afkMessage   String?
  afkTimestamp DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("users")
}

model Reminder {
  id        Int      @id @default(autoincrement())
  userId    String
  guildId   String
  message   String
  createdAt DateTime @default(now())
  remindAt  DateTime

  @@map("reminders")
}

model VoiceChannel {
  id        String   @id
  ownerId   String
  guildId   String
  createdAt DateTime @default(now())

  @@map("voice_channels")
}
